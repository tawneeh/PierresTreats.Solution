@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

<br>

@if(@Model.Treats.Count == 0)
{
  <h4>Currently this Flavor is not used in any of the Treats.</h4>
}
else
{
  <h3>Treats this flavor makes delicious:</h3>
  <ul>
  @foreach(var join in Model.Treats)
  {
    <li>@join.Treat.Name</li>
    @using (Html.BeginForm("DeleteTreat", "Flavors"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)

      <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
    }
  }
  </ul>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Flavor List", "Index")</p>
<p>@Html.ActionLink("Edit this Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete this Flavor", "Delete", new { id = Model.FlavorId })</p>